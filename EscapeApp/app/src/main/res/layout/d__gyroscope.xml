<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/gyroheader"

    android:background="@color/black"
    >



    <ImageView
        android:id="@+id/goldcoin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/goldcoin"
        android:layout_weight="0.88"

        />
    <ImageView
        android:id="@+id/silvercoin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/silvercoin"
        android:layout_weight="0.88"
        />
    <ImageView
        android:id="@+id/bronzecoin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/bronzecoin"
        android:layout_weight="0.88"
        />
    <ImageView
        android:id="@+id/gyroimage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/skullball"
        android:layout_weight="0.88"
        android:layout_centerHorizontal = "true"
        android:layout_centerVertical = "true"

        />


</RelativeLayout>
