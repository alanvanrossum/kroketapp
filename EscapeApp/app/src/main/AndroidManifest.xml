<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.context.kroket.escapeapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".application.App">
        <activity android:name=".mainscreens.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".minigames.Game_A_Activity"
            android:label="@string/title_activity_game__a_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".minigames.Game_AA_Activity" />

        <service
            android:name=".network.ConnectionService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".minigames.Game_B_Activity" />
        <activity android:name=".mainscreens.WaitingActivity" />
        <activity android:name=".minigames.Game_C_Activity"></activity>
    </application>

</manifest>